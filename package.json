{
  "name": "sasat",
  "version": "0.2.0",
  "repository": "https://github.com/yanokunpei/sasat.git",
  "author": "yanokunpei <ninian138@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "bin": {
    "sasat": "lib/src/cli/cli.js"
  },
  "scripts": {
    "start": "env-cmd .env ts-node ./index.ts",
    "build": "rm -rf ./lib && yarn tsc",
    "lint": "tslint 'src/**/*.ts'",
    "fmt": "yarn lint --fix && yarn prettier",
    "prettier": "prettier --write './**/*.ts'",
    "pretest": "yarn resetdb",
    "test": "env-cmd jest --coverage --silent=false --verbose false",
    "redis": "docker-compose exec redis redis-cli",
    "resetdb": "docker-compose exec db sh -c \"mysql -u root < /docker-entrypoint-initdb.d/temp.sql\"",
    "prepublish": "yarn build",
    "sasat": "yarn env-cmd ts-node ./src/cli/cli.ts"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "js-yaml": "^3.13.1",
    "mariadb": "^2.1.0",
    "mysql": "^2.17.1",
    "redis": "^2.8.0",
    "sqlstring": "^2.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "23.3.14",
    "@types/js-yaml": "3.12.1",
    "@types/mysql": "^2.15.7",
    "@types/node": "12.7.4",
    "@types/redis": "2.8.13",
    "@types/sqlstring": "2.2.1",
    "cac": "^6.5.3",
    "chalk": "^2.4.2",
    "env-cmd": "9.0.3",
    "husky": "^3.0.5",
    "jest": "24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "ts-node": "7.0.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "3.6.2"
  },
  "lint-staged": {
    "*.ts": [
      "yarn fmt",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.+(ts|tsx|js)"
    ]
  }
}
