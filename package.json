{
  "name": "sasat",
  "version": "0.13.7",
  "repository": "https://github.com/yanokunpei/sasat.git",
  "author": "yanokunpei <ninian138@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "bin": {
    "sasat": "lib/cli/cli.js"
  },
  "scripts": {
    "start": "env-cmd .env ts-node ./index.ts",
    "build": "rm -rf ./lib && yarn tsc",
    "lint": "eslint 'src/**/*.ts'",
    "fmt": "yarn lint --fix && yarn prettier",
    "prettier": "prettier --write './**/*.ts'",
    "pretest": "yarn resetdb && yarn sasat migrate",
    "test": "env-cmd jest --coverage --silent=false --verbose false",
    "resetdb": "docker-compose exec db sh -c \"mysql -u root < /docker-entrypoint-initdb.d/temp.sql\"",
    "prepare": "yarn build",
    "sasat": "yarn env-cmd ts-node ./src/cli/cli.ts",
    "server": "yarn env-cmd ts-node --project testServer.tsconfig.json -r tsconfig-paths/register ./test/testServer.ts"
  },
  "dependencies": {
    "cac": "6.7.12",
    "chalk": "5.0.1",
    "fs-extra": "^10.0.0",
    "js-yaml": "^4.0.0",
    "mariadb": "^2.1.5",
    "mysql": "^2.17.1",
    "pluralize": "^8.0.0",
    "prettier": "^2.0.0",
    "sqlstring": "^2.3.1",
    "typescript": "4.6.3"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.13",
    "@types/jest": "26.0.24",
    "@types/js-yaml": "4.0.5",
    "@types/mysql": "2.15.21",
    "@types/node": "16.11.26",
    "@types/pluralize": "0.0.29",
    "@types/prettier": "2.6.0",
    "@types/sqlstring": "2.3.0",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "apollo-server": "3.6.7",
    "env-cmd": "10.1.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "graphql": "16.3.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "12.3.7",
    "ts-jest": "26.5.6",
    "ts-node": "10.7.0",
    "tsconfig-paths": "3.14.1"
  },
  "peerDependencies": {
    "apollo-server": "^2.0.0 || ^3.0.0",
    "typescript": "^3.7.4 || ^4.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "yarn fmt"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^sasat": "<rootDir>/lib"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/lib",
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  }
}
