{
  "name": "sasat",
  "version": "0.11.1",
  "repository": "https://github.com/yanokunpei/sasat.git",
  "author": "yanokunpei <ninian138@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "bin": {
    "sasat": "lib/cli/cli.js"
  },
  "scripts": {
    "start": "env-cmd .env ts-node ./index.ts",
    "build": "rm -rf ./lib && yarn tsc",
    "lint": "eslint 'src/**/*.ts'",
    "fmt": "yarn lint --fix && yarn prettier",
    "prettier": "prettier --write './**/*.ts'",
    "pretest": "yarn resetdb && yarn sasat migrate",
    "test": "env-cmd jest --coverage --silent=false --verbose false",
    "resetdb": "docker-compose exec db sh -c \"mysql -u root < /docker-entrypoint-initdb.d/temp.sql\"",
    "prepare": "yarn build",
    "sasat": "yarn env-cmd ts-node ./src/cli/cli.ts"
  },
  "dependencies": {
    "cac": "6.5.4",
    "chalk": "3.0.0",
    "fs-extra": "^8.1.0",
    "js-yaml": "^3.13.1",
    "mariadb": "^2.1.5",
    "mysql": "^2.17.1",
    "pluralize": "^8.0.0",
    "prettier": "^1.19.1",
    "sqlstring": "^2.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "8.0.1",
    "@types/jest": "24.0.25",
    "@types/js-yaml": "3.12.1",
    "@types/mysql": "2.15.8",
    "@types/node": "13.1.6",
    "@types/pluralize": "0.0.29",
    "@types/prettier": "1.19.0",
    "@types/sqlstring": "2.2.1",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "apollo-server": "2.9.16",
    "env-cmd": "10.0.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "graphql": "14.5.8",
    "husky": "4.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "ts-jest": "24.3.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.4"
  },
  "peerDependencies": {
    "apollo-server": "^2.0.0",
    "typescript": "^3.7.4"
  },
  "lint-staged": {
    "*.ts": [
      "yarn fmt",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^sasat": "<rootDir>/lib"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  }
}
