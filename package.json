{
  "name": "sasat",
  "version": "0.15.0",
  "repository": "https://github.com/yanokunpei/sasat.git",
  "author": "yanokunpei <ninian138@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "bin": {
    "sasat": "lib/cli/cli.js"
  },
  "scripts": {
    "start": "env-cmd .env ts-node ./index.ts",
    "build": "yarn tsc",
    "lint": "eslint 'src/**/*.ts'",
    "fmt": "yarn lint --fix && yarn prettier",
    "prettier": "prettier --write './**/*.ts'",
    "pretest": "yarn resetdb && yarn sasat migrate",
    "test": "env-cmd jest --coverage --silent=false --verbose false",
    "test:single": "env-cmd jest --silent=false --verbose false",
    "test:base": "node --experimental-vm-modules node_modules/.bin/jest",
    "resetdb": "docker-compose exec db sh -c \"mysql -u root < /docker-entrypoint-initdb.d/temp.sql\"",
    "prepare": "yarn build",
    "sasat": "yarn env-cmd ts-node-esm ./src/cli/cli.ts",
    "server": "yarn env-cmd ts-node-esm --project testServer.tsconfig.json -r tsconfig-paths/register ./test/testServer.ts"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.0.1",
    "fs-extra": "^10.1.0",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^2.0.0",
    "js-yaml": "^4.1.0",
    "mariadb": "^3.0.1",
    "mysql2": "^2.3.3",
    "pluralize": "^8.0.0",
    "prettier": "^2.7.1",
    "sqlstring": "^2.3.3",
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "sasat": "link:./lib",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.1.2",
    "@types/js-yaml": "4.0.5",
    "@types/node": "18.7.14",
    "@types/pluralize": "0.0.29",
    "@types/prettier": "2.7.1",
    "@types/sqlstring": "2.3.0",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "apollo-server": "3.10.3",
    "env-cmd": "10.1.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "lint-staged": "13.0.3",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0"
  },
  "peerDependencies": {
    "apollo-server": "^2.0.0 || ^3.0.0",
    "typescript": "^3.7.4 || ^4.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "yarn fmt"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "type": "module"
}
